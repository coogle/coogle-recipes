<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bacon Ranch Potato Salad</title>
      <categories>
        <cat>Potatoes</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>pounds</unit></amt>
        <item>New potatoes</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Mayonnaise</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Ranch dressing</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Garlic powder</item></ing>
      <ing>
        <amt>
          <qty>8</qty>
          <unit>slices</unit></amt>
        <item>Bacon, crisp, crumbled</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Celery, sliced</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Red bell pepper, sliced</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Green onions, sliced</item></ing></ingredients>
    <directions>
      <step>  Cut potatoes into 1/4-inch slices; boil in water until tender (about 10
  minutes); drain well. Mix mayonnaise, ranch dressing and seasonings in
  large bowl until well blended. Add potatoes and remaining ingredients; mix
  well. Serve immediately or refrigerate.
  
  Posted to MC-Recipe Digest V1 #643 by Nancy Berry &lt;nlberry@prodigy.net&gt; on
  Jun 11, 1997
 
</step></directions></recipe></recipeml>
