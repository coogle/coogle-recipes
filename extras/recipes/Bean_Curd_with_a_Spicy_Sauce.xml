<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bean Curd with a Spicy Sauce</title>
      <categories>
        <cat>Vegetables</cat></categories>
      <yield>2</yield></head>
    <ingredients>
      <ing-div>
        <title>SAUCE</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cornstarch</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Stock</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Chili paste with garlic</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Soy sauce</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Vegetable oil</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Salt to taste</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Sugar</item></ing></ing-div>
      <ing-div>
        <title>BEAN CURD</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Oil</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Garlic cloves</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Fresh ginger</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Scallions</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>pound</unit></amt>
          <item>Bean curd cut into 1-inch cubes</item></ing></ing-div></ingredients>
    <directions>
      <step>  Whisk together the sauce ingredients &amp; set aside. In a wok, saute garlic &amp;
  ginger.  Add scallions, followed by the tofu. Cook for a few minutes. Pour
  suace over the sauted ingredients.  Mix gently &amp; simmer carefully. Let the
  sauce thicken, stirring gently every now &amp; then. Serve over rice.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
