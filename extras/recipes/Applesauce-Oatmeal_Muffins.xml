<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Applesauce-Oatmeal Muffins</title>
      <categories>
        <cat>Desert</cat>
        <cat>Digest</cat>
        <cat>Fatfree</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Rolled Oats</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Non-fat milk (was: buttermilk)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Wheat flour</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Brown sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Applesauce (I used chunky)</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Egg whites or egg substitute</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Baking powder</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Baking soda</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt (optional)</item></ing></ingredients>
    <directions>
      <step>  ~ Soak oats in milk for ~1 hour.  Combine the rest of the ingredients, mix
  well, and bake at 400 degrees for 25 minutes in a muffin tin.
  
  ~ Makes 12 medium-sized muffins (guaranteed to turn you into a marathoner
  ;-) Shared by Mike D. Kail
  
  From Fatfree Digest April-May 1994, Formatting by Sue Smith (using MMCONV)
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/fatfreex.zip
 
</step></directions></recipe></recipeml>
