<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Walnut Cream Sauce</title>
      <categories>
        <cat>Food proces</cat>
        <cat>Pasta</cat>
        <cat>Sauces</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Walnuts; toasted</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Cl Garlic; quartered</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Fresh parsley; chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Fresh marjoram; chopped</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Or 1/2 teaspoon dried marjor</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Milk; (or more)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Ricotta cheese</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Cayenne pepper</item></ing></ingredients>
    <directions>
      <step>  Recipe by: Rodale's Basic Natural Foods Cookbook In a blender chop nuts,
  garlic, and herbs together. Add oil and blend unti incorporated, then add
  milk, cheese and cayenne and process again until smooth. (Thin with
  additional milk if too thick)  Toss with hot pasta.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
