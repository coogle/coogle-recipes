  <recipe>
    <head>
      <title>Barbecue Sauce with Beer Robert</title>
      <categories>
        <cat>Sauce</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Bottles (14-oz) catsup</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Bottle (12-oz) chili suace</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Prepared mustard</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Dry mustard</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Brown sugar; firmly packed</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Black pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Bottle (5-oz) steak sauce</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Worcestershire sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Soy sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Bottle (12-oz) beer</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Mince garlic</item></ing></ingredients>
    <directions>
      <step>  Date: Thu, 25 Apr 1996 21:08:28 +0000
  
  From: "Tom Bartoffy" &lt;bartoft@pathway1.pathcom.com&gt;
  
  Combine all ingredients, except garlic, in saucepan and simmer 30 minutes
  over medium heat. Add minced garlic before using. Baste meat during last 15
  minutes of grilling time.
  
