  <recipe>
    <head>
      <title>Asian Marinade</title>
      <categories>
        <cat>June 1996 i</cat>
        <cat>Marinades</cat>
        <cat>Sauces</cat>
        <cat>&amp; salsas</cat></categories>
      <yield>10</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Fresh orange juice</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Fresh lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Fresh lime juice</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Rice wine vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Low sodium soy sauce</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Whole scallions -- thinly</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Sliced</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>White, lt. green onl</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>small</unit></amt>
        <item>Jalapeno -- sliced thin,</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Crosswi</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Red pepper flakes</item></ing>
      <ing>
        <amt>
          <qty>8</qty>
          <unit/></amt>
        <item>Thin strips orange zest</item></ing></ingredients>
    <directions>
      <step>  Mix all ingredients in a medium bowl. Use to marinade shellfish, chicken or
  pork.
  
