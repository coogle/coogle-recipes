<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Lasagna</title>
      <categories>
        <cat>Italian</cat>
        <cat>Beef</cat>
        <cat>Main dish</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Onion, minced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Clove garlic menced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Ground beef</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Shortening</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Can whole tomatoes</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>Tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Oregano</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>pounds</unit></amt>
        <item>Lasagna noodles</item></ing>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>quarts</unit></amt>
        <item>Boiling water</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>pounds</unit></amt>
        <item>Sliced Mozzarella cheese</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Cream cottage cheese</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Cheddar cheese</item></ing></ingredients>
    <directions>
      <step>  Saute onion, garlic, and meat in shortening about 20
  minutes.  Add next four ingredients. with 1 tsp salt.
  Simmer for 40 minutes.  Cook noodles with 1 tbsp salt
  for 20 minutes; drain. Put 1/3 meat mixture in baking
  dish.  Add layer of noodles, add 1/2 cottage cheese,
  1/3 Mozzarella, and 1/2 Cheddar.  Repeat layers,
  ending with remaining meat mixture and top with
  remaining 1/3 Mozzarella cheese.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
