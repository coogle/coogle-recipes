<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Applesauce Cookies #1</title>
      <categories>
        <cat>Cookie</cat></categories>
      <yield>36</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Butter</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Brown sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Almond extract</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Vanilla extract</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Applesauce</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Oatmeal</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Baking soda</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Ground almonds</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Pecan pieces; optional</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Raisins; optional</item></ing></ingredients>
    <directions>
      <step>  Cream together butter and sugars. Add almond extract, eggs, vanilla and
  applesauce. Mix well. Blend in flour, oatmeal, baking soda and almonds. If
  desired, add pecan pieces and/or raisins. Drop by teaspoons onto
  Teflon-coated cookie sheet and bake at 350 degrees for 8-10 minutes. Yields
        3    dozen cookies.
  
  From a collection of my mother's (Judy Hosey) recipe box which contained
  lots of her favorite recipes, clippings, etc.  Downloaded from Glen's MM
  Recipe Archive, http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
