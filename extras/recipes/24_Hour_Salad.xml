<recipeml version="0.5">
  <recipe>
    <head>
      <title>24 Hour Salad</title>
      <categories>
        <cat>Salad</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>small</unit></amt>
        <item>Head lettuce; shredded</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Green pepper; chopped</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Onion; chopped</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Celery; chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>Frozen peas; uncooked</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Salad dressing</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>pounds</unit></amt>
        <item>Cheddar cheese; shredded</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Bacon bits and croutons</item></ing></ingredients>
    <directions>
      <step>  Place lettuce on bottom of large dish. Place rest of ingredients in layers
  as listed. Top with bacon bits and croutons. Cover; refrigerate for 24
  hours.
  
  REFRIGERATE FOR 24 HOURS
  
  From &lt;A Taste of Louisiana&gt;.  Downloaded from Glen's MM Recipe Archive,
  http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
