<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Beef and Vegetable Loaf</title>
      <categories>
        <cat>Main dish</cat>
        <cat>Meats</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>pounds</unit></amt>
        <item>Ground beef</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Kikkoman Soy Sauce</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>slices</unit></amt>
        <item>Bread; shredded</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Instant minced onion</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Celery stalks finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Carrot; shredded</item></ing>
      <ing>
        <amt>
          <qty>8</qty>
          <unit>ounces</unit></amt>
        <item>Tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Tabasco pepper sauce</item></ing></ingredients>
    <directions>
      <step>  Thoroughly combine all ingredients; lightly pack into 9 x 5-inch loaf pan.
  Bake at 350 F. 1 hour, or until thoroughly cooked. Drain liquid; let stand
       10    minutes before slicing.
  
  Makes 6 to 8 servings.
  
