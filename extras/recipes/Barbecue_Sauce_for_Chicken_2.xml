<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce for Chicken</title>
      <categories>
        <cat>Bar-b-q</cat>
        <cat>Sauces</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Peanut oil</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Vinegar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Tomato paste</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Mustard,prepared</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>dashes</unit></amt>
        <item>Hot pepper sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Garlic salt*</item></ing></ingredients>
    <directions>
      <step>  * - or plain salt if preferred. Combine ingredients and beat with a whisk
  until well blended. Use as baste for charcoal-broiled chicken.
 
</step></directions></recipe></recipeml>
