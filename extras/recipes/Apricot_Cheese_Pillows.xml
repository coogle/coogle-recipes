<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apricot Cheese Pillows</title>
      <categories>
        <cat>Dessert</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>8</qty>
            <unit/></amt>
          <item>Prepared crepes</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>package</unit></amt>
          <item>(8-oz) cream cheese; softened</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Butter; softened</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Grated lemon rind</item></ing></ing-div>
      <ing-div>
        <title>APRICOT SAUCE</title>
        <ing>
          <amt>
            <qty>2/3</qty>
            <unit>cups</unit></amt>
          <item>Apricot jam</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Orange juice</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Butter</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Lemon juice</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Grated lemon peel</item></ing></ing-div></ingredients>
    <directions>
      <step>  Combine cheese, butter, sugar, vanilla and 1 teaspoon lemon rind with an
  electric mixer. Spread 3 teaspoons in each crepe. Fold envelope style.
  Arrange in buttered dish. Bake 10 minutes at 350 degrees. Heat all
  ingredients for sauce together until smooth. Serve over crepes. Serves 4.
  
  From &lt;A Taste of Louisiana&gt;.  Downloaded from Glen's MM Recipe Archive,
  http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
