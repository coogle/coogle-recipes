<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basil Marinated Catfish with Pickled Peaches</title>
      <categories>
        <cat>Fish</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>4</qty>
            <unit/></amt>
          <item>Center cut catfish steaks, 2-inch thick</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit/></amt>
          <item>Whole pickled peaches, sliced</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Basil marinade</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Pickling liquid</item></ing></ing-div>
      <ing-div>
        <title>BASIL MARINADE</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Paprika, Hungarian</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Celery salt</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Sage, ground</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Mustard</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Chipotle powder</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Dried basil</item></ing></ing-div>
      <ing-div>
        <title>PICKLED PEACHES</title>
        <ing>
          <amt>
            <qty>4</qty>
            <unit/></amt>
          <item>Whole peaches, ripe but firm, peeled and seeded</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Water</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Bourbon</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Cider vinegar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Cinnamon stick</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Chipotle peppers</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Basil chiffonade</item></ing></ing-div></ingredients>
    <directions>
      <step>  Rub catfish with basil marinade and let stand for 1 hour in the
  refrigerator. While the catfish is still very cold, grill for 5 minutes on
  each side. Slice peaches and place on top of catfish and drizzle some of
  the pickling juice over the top.
  
  Yield: 4 servings
  
  Basil Marinade: Mix all ingredients and reserve in the refrigerator,
  covered tightly.
  
  Pickled Peaches: Combine all ingredients and boil for 4 minutes. Remove
  from heat and refrigerate overnight. Posted to MM-Recipes Digest V4 #148 by
  "Vince &amp; Juley Roberts" &lt;vince@bellsouth.net&gt; on May 28, 1997
 
</step></directions></recipe></recipeml>
