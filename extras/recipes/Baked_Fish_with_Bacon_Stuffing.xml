<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Fish with Bacon Stuffing</title>
      <categories>
        <cat>Fish</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Soft bread crumbs</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Bacon drippings</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Onion; finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Diced bacon; cooked</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Seasonings</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>pounds</unit></amt>
        <item>Dressed fish</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Soft butter or margarine</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Lemon wedges</item></ing></ingredients>
    <directions>
      <step>    Mix together all ingredients except fish, butter and lemon. Place
  stuffing lightly in cavity of fish; do not skewer. Place in greased baking
  pan; spread with butter. Bake in a 400 degree oven for 40 minutes or until
  fish flakes easily. Baste occasionally. Serve with lemon wedges.
  
  From &lt;A Taste of Louisiana&gt;.  Downloaded from Glen's MM Recipe Archive,
  http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
