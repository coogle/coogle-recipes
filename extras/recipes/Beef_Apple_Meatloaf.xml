  <recipe>
    <head>
      <title>Beef Apple Meatloaf</title>
      <categories>
        <cat>Beef</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Ground beef</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Milk</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Fine bread crumbs</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit/></amt>
        <item>Onion; diced</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt and pepper to taste</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>medium</unit></amt>
        <item>Apples; grated</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Nutmeg</item></ing></ingredients>
    <directions>
      <step>  Preheat oven to 350 degrees. Mix all ingredients. Bake until done. busted
