<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bbq Meatloaf</title>
      <categories>
        <cat>Crs</cat>
        <cat>Totest</cat>
        <cat>Post</cat>
        <cat>Chopmeat</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing-div>
        <title>SAUCE</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>(8oz) tomato sauce</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Packed brown sugar</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Vinegar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Dry mustard</item></ing></ing-div>
      <ing-div>
        <title>MEATLOAF</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>pounds</unit></amt>
          <item>Lean ground beef</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Eggs, beaten</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Oats</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>medium</unit></amt>
          <item>Chopped onion</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>medium</unit></amt>
          <item>Cholled green pepper</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Pepper</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Poultry seasoning</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Dried parsley</item></ing></ing-div></ingredients>
    <directions>
      <step>  Combine sauce ingredients; divide in half and set aside.
  
  Combine meatloafa ingredients and half sauce. Bake at 350F. an hour. Remove
  and drain. Pour remaining sauce over and bake another 20 minutes or so
  until no pink remains.
  
  Taste of Home Ground Beef Collection 1996 Edition
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
