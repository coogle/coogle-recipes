<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Amish Peach Pie</title>
      <categories>
        <cat>Pies</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>cups</unit></amt>
          <item>Peaches; peeled and sliced</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Tapioca</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>9" unbaked pie shell</item></ing></ing-div>
      <ing-div>
        <title>CRUMBS</title>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Butter or margerine; melted</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cinnamon</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Brown sugar</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix together gently, peaches, sugar, salt and tapioca. Let belnd for 5
  minutes before spooning into pie shell. Mix crumb ingredients well and
  sprinkle over pie shell.
   Bake at 425 degrees F. for 45 to 50 minutes.
  
  Source: The Best Of Amish Cooking by Phyllis Pellman Good Submitted by
  Michael Hatala, Prodigy F&amp;W Board
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
