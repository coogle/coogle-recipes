<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Filling</title>
      <categories>
        <cat>Crocker</cat>
        <cat>Breads</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3 1/2</qty>
          <unit>ounces</unit></amt>
        <item>Almond paste</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Powdered sugar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Margarine or butter</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sliced almonds</item></ing></ingredients>
    <directions>
      <step>  Heat 1 package (3 1/2 oz) almond paste, cut up, 1/2 powdered sugar and 1/4
  cup margarine or butter over medium heat, stirring constantly until smooth.
  Stir in 1/2 cup sliced almonds.
  
  Source: Betty Crocker's Cookbook, 6th Edition
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
