<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple Pie in a Brown Bag</title>
      <categories>
        <cat>Fruits</cat>
        <cat>Pies</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>large</unit></amt>
        <item>Apples -- peeled and sliced</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Pie crust</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>***TOPPING***</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Butter -- melted</item></ing></ingredients>
    <directions>
      <step>  Place apple slices in pastry-lined pie pan.  Combine sugar, flour and
  cinnamon; sprinkle over apples.  Drizzle with lemon juice.  In bowl,
  combine topping ingredients until crumbly; sprinkle over pie.  Place in
  brown paper bag, fold end twice and fasten.  Bake at 350 for 50 to 60
  minutes. Source:  Favorite Apple Recipes.
  
  Recipe By     : Sue Klapper
  
  From: Ladies Home Journal- August 1991
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
