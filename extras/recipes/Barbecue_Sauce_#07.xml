<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce #07</title>
      <categories>
        <cat>Sauce</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Chopped onions</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Lemons; juice of</item></ing>
      <ing>
        <amt>
          <qty>3 1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Worcestershire sauce</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Each: salt; cayenne, black pepper; chili powder</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Dry mustard</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Cloves garlic</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Liquid smoke</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Each: chili sauce; beer, salad oil</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Chopped hot green peppers</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>tablespoons</unit></amt>
        <item>Cider vinegar</item></ing>
      <ing>
        <amt>
          <qty>10</qty>
          <unit/></amt>
        <item>Peppercorns</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Brown sugar</item></ing></ingredients>
    <directions>
      <step>  Blend all ingredients in blender. Cook for 20 minutes.
  
