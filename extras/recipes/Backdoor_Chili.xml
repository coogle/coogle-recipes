<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Backdoor Chili</title>
      <categories>
        <cat>Chili</cat>
        <cat>Salli's</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>****PART 1****</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>To 2 tablespoons cooking oil</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>pounds</unit></amt>
        <item>Beef chuck tender, cut into</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>1-inch cubes</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cans</unit></amt>
        <item>(14 1/2 oz.@) beef broth</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>(8 oz.) tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>dashes</unit></amt>
        <item>Tabasco</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Onion powder</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Cayenne</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Beef bouillon granules</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Chicken bouillon granules</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>****PART 2****</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Garlic powder</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Ground cumin</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>teaspoons</unit></amt>
        <item>White pepper</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>tablespoons</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt to taste</item></ing></ingredients>
    <directions>
      <step>  Heat oil in Dutch oven. Cook beef in oil, until beef is browned. Stir in
  remaining ingredients of Part 1. Heat to boiling; reduce heat. Simmer
  uncovered about 1 1/2 hours, adding water as needed, until beef is tender.
  Stir in the ingredients of Part 2. Simmer uncovered about 30 minutes or
  until desired consistancy is reached.
  
