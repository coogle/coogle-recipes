<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Poppy Seed Tea Bread</title>
      <categories>
        <cat>Bread</cat></categories>
      <yield>2</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Eggs</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>+ 2 tbsp. oil</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Almond flavoring</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Poppy seeds</item></ing></ing-div>
      <ing-div>
        <title>GLAZE</title>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Orange juice</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Almond extract</item></ing></ing-div></ingredients>
    <directions>
      <step>  Blend all ingredients until well blended. Pour into greased tins. Bake at
  350 degrees for 1 hour. Makes 2 large, 3 medium or 4 small loaves. Heat all
  glaze ingredients until sugar melts. Brush on cooled breads with a pastry
  brush. Allow glaze to harden before wrapping. Enjoy!
  
  Posted to MM-Recipes Digest V4 #187 by Julie Bertholf
  &lt;jewel1@ix.netcom.com&gt; on Jul 19, 1997
 
</step></directions></recipe></recipeml>
