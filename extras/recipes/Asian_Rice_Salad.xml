<recipeml version="0.5">
  <recipe>
    <head>
      <title>Asian Rice Salad</title>
      <categories>
        <cat>Rice</cat>
        <cat>Salad</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Leftover Asian rice pilaf</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Cloves garlic, minced (or</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>1 teaspoon bottled)</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sliced water chestnuts,</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Coarsely chopped</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Thin carrot slices</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Thin celery slices</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Roasted peanuts, coarsely</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Chopped</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Oil (preferably peanut)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>To 3 tablespoons rice or red</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Wine vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Optional:</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Green onions (white and</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Green tops), sliced</item></ing></ingredients>
    <directions>
      <step>  1. Fluff leftover rice pilaf with a fork.  Add garlic, water chestnuts,
  carrots, celery, green onions and peanuts. 2. Combine oil, vinegar and
  sugar in a small jar, cover and shake to combine. Pour over the salad and
  serve at once.
  
