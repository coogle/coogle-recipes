<recipeml version="0.5">
  <recipe>
    <head>
      <title>Avocado Fish Kai</title>
      <categories>
        <cat>Seafood</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Ripe avocados</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Fresh lemon juice</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Minced parsley</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>teaspoons</unit></amt>
        <item>Minced onion</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Crushed red pepper</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Thyme</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Cleaned whole baked fish (5</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Lb)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Parsley springs (for</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Garnish)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Lemon slices (for garnish)</item></ing></ingredients>
    <directions>
      <step>  Cut avocados into halves; remove seeds &amp; skin; mash. Mix lemon juice,
  parsley &amp; seasonings. Spread over warm fish.
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmkah001.zip
 
</step></directions></recipe></recipeml>
