<recipeml version="0.5">
  <recipe>
    <head>
      <title>Ambrosia Sherbet</title>
      <categories>
        <cat>Dessert</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>(large) crushed pineapple</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>(large) apricots; chopped</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cans</unit></amt>
        <item>(6-oz) frozen orange juice</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Juice cans water</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit/></amt>
        <item>Ripe bananas; mashed</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>Coconut</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Ginger ale or champagne</item></ing></ingredients>
    <directions>
      <step>  Mix thoroughly all ingredients except gingerale or champagne. Freeze in 1
  quart (cardboard) freezer containers with lids. Serve with champagne or
  gingerale.
  
  From &lt;A Taste of Louisiana&gt;.  Downloaded from Glen's MM Recipe Archive,
  http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
