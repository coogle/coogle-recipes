<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Fish with Hot and Spicy Spinach</title>
      <categories>
        <cat>Fish</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>bunch</unit></amt>
        <item>Fresh, clean spinach --</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Stems &amp; center vein</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Removed</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>small</unit></amt>
        <item>Bunch</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Stems removed</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg white</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Cloves garlic</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Grated fresh ginger</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Soy sauce</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Dark sesame oil</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Hot pepper flakes</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Fresh clean cilantro --</item></ing></ingredients>
    <directions>
      <step>  cod, salmon, tuna or sole filets
  
  Fit food processor with metal blade and whir all ingredients together.
  Place the aove mixture on fresh filsh filets and bake in 325 F. oven until
  fish flakes easily, about 15-29 minutes. Really great on salmon, tuna, cod
  or sole.
  
  Recipe By     : MsShallot/AOL
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
