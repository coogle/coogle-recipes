<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecued Shrimp #3</title>
      <categories>
        <cat>Seafood</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Raw shrimp (with shell)</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>teaspoons</unit></amt>
        <item>Thyme</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Season all</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Lots of black &amp; red pepper</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Sticks butter; melted</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Lemons; cut in half</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Several cloves of garlic</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Olive oil</item></ing></ingredients>
    <directions>
      <step>    Spread shrimp in shallow baking pan (about 1-1/2 inches deep); pour
  melted butter and olive oil over shrimp. Squeeze lemons over shrimp and put
  peels in the shrimp. Add other ingredients. Broil for 5 minutes on each
  side.
  
  From &lt;A Taste of Louisiana&gt;.  Downloaded from Glen's MM Recipe Archive,
  http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
