<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>"Finger Lickin" Pickens' Sauce</title>
      <categories>
        <cat>Sauces</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Ketchup</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>A-1 steak sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Whole celery seed</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Tabasco sauce</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Soy sauce</item></ing>
      <ing>
        <amt>
          <qty>2/3</qty>
          <unit>cups</unit></amt>
        <item>Dark brown sugar</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Juice of 2 lemons</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Horseradish</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Garlic powder</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Sage</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Beer</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>small</unit></amt>
        <item>Onions finely chopped</item></ing></ingredients>
    <directions>
      <step>   Combine all ingredients in a saucepan. Bring mixture to boil. Simmer sauce
  over medium-low heat, uncovered, for 5 minutes, stirring constantly..
  
  Nutrition information per Tbsp: Calories, 18 Fat, 0.03 gram Carbohdrate, 4
  gram Cholesterol, 0 milligram Sodium, 155 milligram
                          Sumitted By Thomas W. Pickens ~--
 
</step></directions></recipe></recipeml>
