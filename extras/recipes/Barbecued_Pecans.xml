<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecued Pecans</title>
      <categories>
        <cat>Appetizer</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Melted butter</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Worcestershire sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Catsup</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Hot sauce</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>cups</unit></amt>
        <item>Pecan halves</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt to taste</item></ing></ingredients>
    <directions>
      <step>  Combine first 4 ingredients. Stir in pecans &amp; mix well. Spread pecans
  evenly in a shallow baking dish. Bake at 300 for 30 minutes, stirring
  frequently. Drain on paper towels. Sprinkle with salt, if desired.
  
  E. F. 'SONNY' KALB
  
