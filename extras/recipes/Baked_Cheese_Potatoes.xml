<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Cheese Potatoes</title>
      <categories>
        <cat>None</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Salad oil</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Clove garlic; split</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>large</unit></amt>
        <item>Potatoes; grated</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Milk</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg; lightly beaten</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Nutmeg</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Sharp cheddar cheese; grated</item></ing></ingredients>
    <directions>
      <step>  Pour oil into a 2-quart baking dish and rub oil around dish with garlic.
  Combine remaining ingredients and pour into the baking dish. Bake at 325
  degrees for 1 hour and 30 minutes.
  
  Recipe by: Southern Living Casseroles Cookbook
  
  Posted to MC-Recipe Digest by "Marie Smith" &lt;crafty1@earthlink.net&gt; on May
  2, 1998
 
</step></directions></recipe></recipeml>
