<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Butter Bread</title>
      <categories>
        <cat>Breadmaker</cat>
        <cat>Hi-protein</cat>
        <cat>High-fiber</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>LARGE</title>
        <ing>
          <amt>
            <qty>1 3/4</qty>
            <unit>cups</unit></amt>
          <item>Low-fat milk</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Almond butter</item></ing>
        <ing>
          <amt>
            <qty>3 1/3</qty>
            <unit>cups</unit></amt>
          <item>Whole wheat bread flour</item></ing>
        <ing>
          <amt>
            <qty>2/3</qty>
            <unit>cups</unit></amt>
          <item>Garbanzo (chickpea) bean flour</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>tablespoons</unit></amt>
          <item>Sesame seeds</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>tablespoons</unit></amt>
          <item>Vital gluten</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Date sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Yeast</item></ing></ing-div>
      <ing-div>
        <title>MEDIUM</title>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Low-fat milk</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Almond butter</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>cups</unit></amt>
          <item>Whole wheat bread flour</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Garbanzo bean flour</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Sesame seeds</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Vital gluten</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Date sugar</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Yeast</item></ing></ing-div>
      <ing-div>
        <title>SMALL</title>
        <ing>
          <amt>
            <qty>7/8</qty>
            <unit>cups</unit></amt>
          <item>Low-fat milk</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Almond butter</item></ing>
        <ing>
          <amt>
            <qty>1 2/3</qty>
            <unit>cups</unit></amt>
          <item>Whole wheat bread flour</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Garbanzo bean flour</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Sesame seeds</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Vital gluten</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Date sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Yeast</item></ing></ing-div></ingredients>
    <directions>
      <step>  Follow the directions of your own breadmaker in making this bread.
  
  The almond butter, sesame seeds, and garbanzo bean flour increase the
  protein quality of this bread. Serve it sliced thinly with soups for a
  complete and nutritious lunch.
  
  Nutrition Facts:  Based on medium-size loaf, the calories per serving are
  183, calories from fat 48. Total fat is 5g, saturated 1g, cholesterol 1mg,
  sodium 180mg, total carb 29g, dietary fiber 3g, sugars 4g, protein 10g.
  Posted to Bakery-Shoppe Digest V1 #410 by serge.cyr@sympatico.ca (Serge
  Cyr) on Nov 23, 1997
 
</step></directions></recipe></recipeml>
