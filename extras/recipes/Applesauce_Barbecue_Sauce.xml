<recipeml version="0.5">
  <recipe>
    <head>
      <title>Applesauce Barbecue Sauce</title>
      <categories>
        <cat>Sauces</cat>
        <cat>Appetizers</cat>
        <cat>Microwave</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Thinly sliced onion</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Butter or margarine</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Worcestershire sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Catsup</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Applesauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing></ingredients>
    <directions>
      <step>  1. Place onions and butter in a deep, 1 1/2-quart, heat- resistant,
  non-metallic casserole. 2. Heat, uncovered, in Microwave Oven 2 minutes or
  until onion is tender. 3. Add lemon juice, Worcestershire sauce, catsup,
  applesauce and salt. 4. Heat, uncovered, in Microwave Oven 7 minutes or
  until sauce is bubbly. Makes 3 cups
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
