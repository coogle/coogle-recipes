<recipeml version="0.5">
  <recipe>
    <head>
      <title>Vinaigrette Dressing</title>
      <categories>
        <cat>Appetizers</cat>
        <cat>Vegetables</cat>
        <cat>Salads</cat>
        <cat>Sauces</cat>
        <cat>Microwave</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Wine vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Finely chopped parsley</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Finely chopped chives</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Canned pimiento, finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/8</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper</item></ing></ingredients>
    <directions>
      <step>  1. Combine all ingredients in a small bowl. Stir until well blended. Makes
        1    cup
  
