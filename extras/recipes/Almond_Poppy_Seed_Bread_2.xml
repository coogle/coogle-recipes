<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Poppy Seed Bread</title>
      <categories>
        <cat>Bread</cat></categories>
      <yield>2</yield></head>
    <ingredients>
      <ing-div>
        <title>BATTER</title>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Poppy seed</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Eggs</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty>1 1/8</qty>
            <unit>cups</unit></amt>
          <item>Oil</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Almond extract</item></ing></ing-div>
      <ing-div>
        <title>GLAZE</title>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Orange juice</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Almond extract</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix all batter ingredients in a large bowl. Pour batter into 2 well greased
  and floured loaf pans. Bake at 350 degrees for 1 hour. Let cool 5 minutes.
  Blend orange glaze ingredients. Pour over loaves while still warm in pans.
  Cool 5 minutes, then remove loaves from pans.
  
  Posted to MM-Recipes Digest V4 #187 by Julie Bertholf
  &lt;jewel1@ix.netcom.com&gt; on Jul 19, 1997
 
</step></directions></recipe></recipeml>
