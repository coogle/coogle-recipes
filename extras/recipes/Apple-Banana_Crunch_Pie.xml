<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple-Banana Crunch Pie</title>
      <categories>
        <cat>Pies</cat>
        <cat>Apples</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>medium</unit></amt>
        <item>Apples; cut in chunks</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>medium</unit></amt>
        <item>Bananas; cut into chunks</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>All purpose flour</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Brown sugar; packed</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Nutmeg</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Butter or margarine; soften</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>9" pastry shell; unbaked</item></ing></ingredients>
    <directions>
      <step>  Combine fruits and lemon juice; let stand 10 minutes. Combine flour, sugar
  and spices; cut in butter till crumbly. Arrange fruit in pastry shell.
  Sprinkle with crumb mixture. Bake at 400~F for 35-40 minutes. Cover top
  lossely with foil if crumb mixture browns too quickly. Cut in wedges to
  serve.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
