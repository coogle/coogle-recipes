  <recipe>
    <head>
      <title>Argentinian Chimichurri-Style Marinade</title>
      <categories>
        <cat>Sauce</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>FOR BEEF AND POULTRY</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Vegetable oil</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Malt vinegar</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Water</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Fresh parsley; chopped</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>large</unit></amt>
          <item>Garlic cloves; minced</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Cayenne pepper</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Fresh oregano leaves; chpd.</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Freshly ground pepper</item></ing></ing-div></ingredients>
    <directions>
      <step>  Combine all ingredients in a glass jar with tight fitting lid. Let stand at
  room temperature for 24 hours. Makes about 1-1/3 cups
  
