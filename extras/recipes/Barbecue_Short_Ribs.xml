<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Short Ribs</title>
      <categories>
        <cat>Beef</cat>
        <cat>Meats</cat>
        <cat>Mom's recip</cat>
        <cat>Tried and t</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>pounds</unit></amt>
        <item>Short ribs</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Chopped onion</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Vinegar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Ketchup</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Mustard</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Worcestershire Sauce</item></ing></ingredients>
    <directions>
      <step>  In pan on stove put 2 T of oil, 1 chopped onion and ribs - brown. Transfer
  ribs and onions to oven proof pan. Mix remaining ingred. and add to pan.
  Cover and cook for 2 hrs. at 300. Add water if necessary
  Posted to TNT - Prodigy's Recipe Exchange Newsletter  by "Linda G."
  &lt;lindag@brunnet.net&gt; on Sep 21, 1997
 
</step></directions></recipe></recipeml>
