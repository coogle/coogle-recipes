<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Andouille</title>
      <categories>
        <cat>Cajun</cat>
        <cat>Meats</cat>
        <cat>Appetizers</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>pounds</unit></amt>
        <item>Pork (2 lb fat, 2 lb lean)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>[usually Boston butt]</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Inner lining of pork stomach</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Or largest intestine (chitte</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Cloves of garlic</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Bay leaves</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Large onions</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Salt (not iodized)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Cayenne pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Chili pepper</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Ground mace</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Ground cloves</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Ground allspice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Minced thyme</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Minced marjoram</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Minced parsley</item></ing></ingredients>
    <directions>
      <step>  (you can use an extra pound of pork instead of the tripe.) - Chop, do not
  grind the meat.  Mix with seasonings. Stuff into casings. Age at least
  overnight and then smoke several hours using hickory, hackberry or ash. (Do
  not use pine.)  Throw anything sweet, such as cane sugar or syrup, raw
  sugar, molassess, sugar cane or brown sugar on the wood before lighting.
  From:    Ellen Cleary
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
