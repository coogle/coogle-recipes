<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Pound Cake</title>
      <categories>
        <cat>Cakes</cat>
        <cat>Pound</cat></categories>
      <yield>10</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Sticks butter</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Shortening</item></ing>
      <ing>
        <amt>
          <qty>5</qty>
          <unit/></amt>
        <item>Large eggs</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>Small can evaporated milk</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>(3/4 cup) + water to make</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>1 cup</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Almond extract</item></ing></ingredients>
    <directions>
      <step>  Cream sugar and shortening. Add eggs and salt, cream well. Add remaining
  ingredients. Pour into a very lightly greased 12 cup bundt pan. Put into
  cold oven; set temperature at 320F. Bake 1 hour and 30 minutes. Cool 15
  minutes and remove from pan.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
