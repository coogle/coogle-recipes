  <recipe>
    <head>
      <title>Banana Sauce</title>
      <categories>
        <cat>Desserts</cat>
        <cat>Sauces</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>BANANAS</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pinch</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Boil one-half cup of sugar and one cup of</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Water together until the mixture threads.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Remove from heat; add three peeled</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Bananas; two tablespoons of lemon juice,</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>And the two well beaten eggs.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Add the pinch of salt and mash and beat</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Until smooth.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>This is a delicious hot sauce for</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Puddings</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Yield: Sauce for 3 servings</item></ing></ingredients>
