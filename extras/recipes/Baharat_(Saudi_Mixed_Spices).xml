<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baharat (Saudi Mixed Spices)</title>
      <categories>
        <cat>Spices</cat>
        <cat>Relishes &amp;</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Black pepper</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Coriander powder</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit/></amt>
        <item>Scant cup cinnamon</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit/></amt>
        <item>Scant cup clove; ground</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Cumin</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Cardamom; ground</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Nutmeg; ground</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Paprika; ground</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Curry powder</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit/></amt>
        <item>Scant cup dried limes; ground</item></ing></ingredients>
    <directions>
      <step>  Mix all ingredients. Store in a tightly sealed jar. Makes about 2 cups.
  
  Recipe by: Tastes of Jubail Posted to MC-Recipe Digest V1 #671 by
  Creedenite@aol.com on Jul 14, 1997
 
</step></directions></recipe></recipeml>
