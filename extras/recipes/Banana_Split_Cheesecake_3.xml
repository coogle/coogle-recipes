<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Split Cheesecake</title>
      <categories>
        <cat>Cheesecakes</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>packages</unit></amt>
        <item>GRAHAM CRACKERS, crushed</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>SUGAR</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>tablespoons</unit></amt>
        <item>BUTTER</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Mix and pat into 10" springform pan, bottom and sides.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>CAKE</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>pounds</unit></amt>
        <item>CREAM CHEESE, removed from wrappers and warmed</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>In microwave for 2 minutes on high.</item></ing>
      <ing>
        <amt>
          <qty>5</qty>
          <unit/></amt>
        <item>JUMBO EGGS, removed from shell and warmed in</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Microwave 25 seconds</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>SUGAR</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>teaspoons</unit></amt>
        <item>LEMON JUICE</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>SOUR CREAM</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>BANANA, mashed</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>CORNSTARCH</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>HEAVY CREAM</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Beat the cheese until light. Add sugar and beat again. Add</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Eggs one at a time, beating after each. Stir in cream, sour</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Cream, vanilla and cornstarch and blend well. Stir in</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Banana.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Preheat oven to 350 with pan of water on bottom of oven.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Bake cake for 1 hour or so until edges firm and cake still</item></ing></ingredients>
    <directions>
      <step>  ** CRUST
 
</step></directions></recipe></recipeml>
