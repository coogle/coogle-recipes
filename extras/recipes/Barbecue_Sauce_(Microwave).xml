<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce (Microwave)</title>
      <categories>
        <cat>Sauces</cat>
        <cat>Appetizers</cat>
        <cat>Microwave</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Butter or margarine</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Onion, finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Clove garlic, peeled and crushed</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Finely chopped green pepper</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Catsup</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Cider vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Dry mustard</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Firm packed dark brown sugar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit>drops</unit></amt>
        <item>(few) Tabasco sauce,to taste</item></ing></ingredients>
    <directions>
      <step>  1. Place butter, onion, garlic and green pepper in a deep, 1 1/2- quart
  heat-resistant, non-metallic casserole and heat in Microwave Oven 3 minutes
  or until tender. Stir occasionally. 2. Add remaining ingredients; stir well
  to combine. 3. Heat, uncovered, in Microwave Oven 2 minutes or until sauce
  bubbles. Serve over meat or poultry. Makes 2 1/4 cups
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
