<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple-Mustard Glaze</title>
      <categories>
        <cat>Glazes</cat></categories>
      <yield>10</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>Apple jelly(11oz)</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>White wine,dry</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Green onions,minced</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Mustard,prepared</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Curry powder</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper,cracked</item></ing></ingredients>
    <directions>
      <step>  1. In 1-quart saucepan over medium heat, cook jelly, wine, green onions,
  mustard, salt, curry powder, and pepper 5 minutes to melt jelly and blend
  flavors.
  
