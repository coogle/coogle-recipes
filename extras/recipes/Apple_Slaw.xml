<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple Slaw</title>
      <categories>
        <cat>Salads</cat>
        <cat>Fruits</cat></categories>
      <yield>5</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>x</unit></amt>
        <item>Apples, thinly sliced</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Lemon Juice</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Shredded Cabbage</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Stalk Celery, chopped</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Carrot, grated</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Med Onion, thinly sliced</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sour Cream</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Mayonnaise</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Celery Salt</item></ing></ingredients>
    <directions>
      <step>   Sprinkle sliced apples with lemon juice. Mix with cabbage, celery, carrot,
  and onion.
   Combine sour cream, mayonnaise and celery salt. Toss with apple mixture
  and serve.
   Lemon juice keeps apples from discoloring.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
