<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecued Chicken with Glaze</title>
      <categories>
        <cat>Poultry</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>(8 oz) can tomato paste</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Orange juice</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Vinegar</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Crushed dried oregano</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit/></amt>
        <item>Peppercorns</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Minced garlic clove</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Chicken</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Honey</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Dry mustard</item></ing></ingredients>
    <directions>
      <step>  In large screw top jar combine paste, oil, orange juice, vinegar,
  salt, peppercorns &amp; garlic. Cover &amp; shake vigorously to blend. In a
  shallow dish pour sauce over chicken. Cover &amp; marinate 2 hours at
  room temperature or overnight in refrigerator, turning occasionally.
  Drain, reserving marinade. Grill chicken over med coals for 45-50
  minutes, brushing with marinade &amp; turning frequently. Just before
  serving, brush with a mixture of honey &amp; mustard to glaze.
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmkah001.zip
 
</step></directions></recipe></recipeml>
