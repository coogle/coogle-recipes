  <recipe>
    <head>
      <title>Basic Dry Rub for Barbecue</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Black pepper</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Paprika</item></ing></ing-div>
      <ing-div>
        <title>FOR RIBS YOU MAY ADD</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Lemon powder</item></ing>
        <ing>
          <amt>
            <qty>6</qty>
            <unit>tablespoons</unit></amt>
          <item>Sugar; (Remember to watch for flameups if you choose to add sugar-it burns)</item></ing></ing-div></ingredients>
