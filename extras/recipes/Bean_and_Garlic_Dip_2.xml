<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bean and Garlic Dip</title>
      <categories>
        <cat>Dips</cat>
        <cat>Appetizers</cat>
        <cat>Mexican</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Pinto Beans; *</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Mayonnaise Or Salad Dressing</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Clove Garlic; Finely Chopped</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Red Chiles; Ground</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Pepper; Dash of</item></ing></ingredients>
    <directions>
      <step>  *  Pinto beans can be home cooked or canned.
  ~-------------------------------------------------------------------------
  Mix all ingredients.  Cover and refrigerate 1 hour.  Serve with tortilla
  chips. Makes 2 cups of dip.
  
  Miscellaneous recipes from the collection of Mike Orchekowski.
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mo-misc.zip
 
</step></directions></recipe></recipeml>
