  <recipe>
    <head>
      <title>Basil-Garlic-Parmesan-Butter</title>
      <categories>
        <cat>Sauce</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>6</qty>
          <unit/></amt>
        <item>Cloves garlic; minced</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Freshly chopped basil</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Lightly toasted pine nuts</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>White wine</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Freshly grated Parmesan cheese</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt to taste</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Crushed dried red chile to taste</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>pounds</unit></amt>
        <item>Unsalted butter; softened</item></ing></ingredients>
    <directions>
      <step>  From: gemini@synapse.net (Georgette &amp; Dave Burnside)
  
  Date: Sun, 11 Feb 1996 05:30:21 GMT
  
  Mix all the ingredients together well. Melt to serve.
  
