<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple Temptation Cake</title>
      <categories>
        <cat>Fruits</cat>
        <cat>Cakes</cat></categories>
      <yield>10</yield></head>
    <ingredients>
      <ing-div>
        <title>PATTI - VDRJ67A</title>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Apples; peel; slice</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cinnamon</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Cinnamon schnapps</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Butter; softened</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Eggs</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Baking soda</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Sour cream</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Nuts; chopped</item></ing></ing-div>
      <ing-div>
        <title>GLAZE</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Butter</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Water</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Cinnamon schnapps</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Nuts; chopped for garnish</item></ing></ing-div></ingredients>
    <directions>
      <step>  CAKE: Preheat oven to 350~. Grease and flour bundt pan. Mix together the
  apples, cinnamon and cinnamon schnapps; set aside. Cream butter and sugar;
  add eggs and beat 2 minutes. Add remaining ingredients except apples and
  nuts. Beat well. Drain liquid from apples and add to batter. Mix well. Add
  apples and nuts. Bake for 1 hour. Cool 20-30 minutes.
  
  GLAZE: Bring to a boil for 2-3 minutes the butter, sugar and water. Stir in
  schnapps; pour over cake. Sprinkle with chopped nuts.
  Posted to MC-Recipe Digest V1 #777 by Nancy Berry &lt;nlberry@prodigy.net&gt; on
  Sep 09, 1997
 
</step></directions></recipe></recipeml>
