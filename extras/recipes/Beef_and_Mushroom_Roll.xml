<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Beef and Mushroom Roll</title>
      <categories>
        <cat>Meats</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>pound</unit></amt>
          <item>Ground beef</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Mushrooms</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Onion; chopped</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Clove garlic; chopped</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Parsley; chopped - to taste</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Celery; chopped</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Green pepper; chopped</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Crescent rolls; or see below</item></ing></ing-div>
      <ing-div>
        <title>CRUST R</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Poultry seasoning</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing></ing-div></ingredients>
    <directions>
      <step>  ~-------------------------------------Pastry:---------- ~-- Place the
  ground beef in a skillet.  Cook, stiring with a fork until brown. Add salt,
  pepper, mushrooms, onion, garlic, parsley, celety, green pepper. Blend well
  and simmer with 1/3 cup water for about 10 minutes. Cool. Make dough or get
  rolls ready.  Roll out ans for a jelly roll, place meat on 1/3 and roll,
  pinch end edges together. Place on greased shallow pan and brush with milk.
  Bake at 425 for 30 minutes.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
