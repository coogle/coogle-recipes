<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Shoyu Chicken</title>
      <categories>
        <cat>Poultry</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>pounds</unit></amt>
          <item>Chicken (salt and pepper; then flour and fry)</item></ing></ing-div>
      <ing-div>
        <title>SAUCE</title>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cans</unit></amt>
          <item>Chicken broth</item></ing>
        <ing>
          <amt>
            <qty>1/8</qty>
            <unit>cups</unit></amt>
          <item>Shoyu</item></ing>
        <ing>
          <amt>
            <qty>1/8</qty>
            <unit>cups</unit></amt>
          <item>Mirin</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>MSG</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>slice</unit></amt>
          <item>Ginger; crushed</item></ing></ing-div></ingredients>
    <directions>
      <step>  Place chicken in pan and pour sauce over it.  Bake at 350 degrees for 30 to
       40    minutes.
  
  From a book of my mother's (Judy Hosey) titled &lt;Senator Richard Matsuura's
  Favorite Recipes&gt;, mostly Japanese and Hawaiian.  Downloaded from Glen's MM
  Recipe Archive, http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
