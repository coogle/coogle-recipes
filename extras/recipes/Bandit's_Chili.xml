<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bandit's Chili</title>
      <categories>
        <cat>Chili</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Lean ground beef</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Garlic clove; minced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Onion; finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Green pepper; finely chopped</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Cider vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Allspice</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Coriander</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Cumin</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>16-oz. red kidney beans with liquid</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>16-oz. crushed tomatoes (2 cups)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Tabasco; to taste</item></ing></ingredients>
    <directions>
      <step>  Cook beef, garlic, onion, and green pepper in a skillet over med-high heat,
  stirring frequently to break up meat. Cook until onion is soft and meat has
  lost its pink color.  Add remaining ingredients, except Tabasco. Bring to
  boil.  Cover and reduce heat. Add Tabasco. Simmer for 45 mins., stirring
  frequently.
  
  For thicker sauce and fuller flavor, add mesa flour. For the best flavor,
  let simmer longer.  Recipe can be doubled; freezes well.
  
  Source:  Ann Dunlap of Tampa, FL (TPA Trib, 2/24/94)
  :: MM by Sue Woodward
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
