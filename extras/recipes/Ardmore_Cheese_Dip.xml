<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Ardmore Cheese Dip</title>
      <categories>
        <cat>Dip</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>packages</unit></amt>
          <item>(8-oz) cream cheese</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>small</unit></amt>
          <item>Onion; chopped</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Mayonnaise</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>(4-oz) pimiento; cut fine</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>dash</unit></amt>
          <item>Tabasco</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Worcestershire</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Chopped pecans</item></ing></ing-div>
      <ing-div>
        <title>MAYONNAISE RECIPE</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Vinegar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Cornstarch</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Dry mustard</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Water</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Egg; beaten</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Butter</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix ingredients for mayonnaise and cook over low heat until thick, stirring
  constantly.  Mix other ingredients and add mayonnaise.  Keep in
  refrigerator and shape into ball before serving. Keeps well.
  
  MRS PAUL GARNER (ALICE)
  
