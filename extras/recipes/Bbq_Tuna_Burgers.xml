<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bbq Tuna Burgers</title>
      <categories>
        <cat>Fish</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>6 1/2</qty>
          <unit>ounces</unit></amt>
        <item>Chunk Lite Tuna can, drained</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Dry Bread Crumbs</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg, slightly beaten</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Minced Celery</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Salad Dressing</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Onion, minced</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Leaf Lettuce</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Hamburger Buns, toasted</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Tomato slices</item></ing></ingredients>
    <directions>
      <step>  Mash tuna with a fork. Mix in bread crumbs, egg, celery, salad dressing,
  and onion. Form into 4 patties. Barbecue or fry for 3 to 4 minutes on each
  side until cooked through. Place patties on lettuce-lined buns, garnish
  with sliced tomatoes and additional salad dressing.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
