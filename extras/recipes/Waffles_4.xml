<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Waffles</title>
      <categories>
        <cat>Breads</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>All purpose flour</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Baking powder</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Milk</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Kirsch or vanilla</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>pounds</unit></amt>
        <item>Melted butter</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Butter for the waffle pan</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Vanilla</item></ing></ingredients>
    <directions>
      <step>  Sift dry ingredients. Stir together eggs, milk, Kirsch and melted butter to
  combine. Stir milk mixture into flour just until ingredients combine.
  Butter griddle place 1 ladle batter in hot griddle and proceed according to
  manufacturer's instructions.
  
