<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple Noodle Kugel</title>
      <categories>
        <cat>Side dish</cat>
        <cat>Jewish</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>8</qty>
            <unit>ounces</unit></amt>
          <item>Noodles; cooked &amp; drained</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>can</unit></amt>
          <item>Apple pie filling</item></ing>
        <ing>
          <amt>
            <qty>6</qty>
            <unit/></amt>
          <item>Egg whites</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Orange juice</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Lemon juice</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Raisins</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Walnuts</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit/></amt>
          <item>Stick margarine; melted</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit/></amt>
          <item>Stick margarine; melted</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>tablespoons</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Cinnamon</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Walnuts</item></ing></ing-div></ingredients>
    <directions>
      <step>  1.  Mix noodles with margarine. 2. Add eggs, sugar, apples, juices, nuts &amp;
  raisins to noodles. Mix well. 3. Top with melted margarine. Sprinkle
  mixture of sugar and cinnamon over top. Top with 1/2 c walnuts. 4. Bake
  350, 1 hour in 9 x 13 pan. It's a good one! Posted on PRODIGY, September,
  1994; formatted by Elaine Radis; PRODIGY ID, BGMB90B; GEnie, E.RADIS
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
