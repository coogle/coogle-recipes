<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Avocado and Orange Salad</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty/>
            <unit>liters</unit></amt>
          <item>Head lettuce; torn into pieces, (I use a soft "butter" lettuce, or romaine)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Purple onion; thinly sliced, (or other if not available)</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cans</unit></amt>
          <item>Mandarin Oranges; drained, (11oz cans)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Or 2 Avocados; peeled and sliced</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>ounces</unit></amt>
          <item>Flaked almonds</item></ing></ing-div>
      <ing-div>
        <title>DRESSING</title>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Oil</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Vinegar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Lemon juice</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Sugar; (or substitute)</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Dry mustard</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Few drops of Tabasco</item></ing></ing-div></ingredients>
    <directions>
      <step>  SOURCE: THE NEW MYRNA ROSEN COOKBOOK
  
  Combine all salad ingredients. Blend all dressing ingredients well,
  preferably in a processor. Pour over salad.............and enjoy, enjoy !!
  Posted to JEWISH-FOOD digest by "nicole kirshenbaum" &lt;nicolek@global.co.za&gt;
  on Jun 6, 1998
 
</step></directions></recipe></recipeml>
