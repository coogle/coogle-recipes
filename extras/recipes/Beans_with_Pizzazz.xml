<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Beans with Pizzazz</title>
      <categories>
        <cat>Vegetable</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Yellow or green beans</item></ing></ing-div>
      <ing-div>
        <title>ADD #1</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Caraway seed</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Chopped apple</item></ing></ing-div>
      <ing-div>
        <title>ADD #2</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Dried basil leaves</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Chopped red onion</item></ing></ing-div>
      <ing-div>
        <title>ADD #3</title>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Seasoned croutons</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sliced; cooked mushrooms</item></ing></ing-div>
      <ing-div>
        <title>ADD #4</title>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Sliced water chestnuts</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Margarine or butter</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Teriyaki sauce</item></ing></ing-div>
      <ing-div>
        <title>ADD #5</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Margarine or butter</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Purchased salt-free natural seasoning mix</item></ing></ing-div></ingredients>
    <directions>
      <step>  Cook beans and add one the the listed mixtures.
  
  From &lt;Meals In Minutes&gt;, a Pillsbury Classic Cookbook.  Downloaded from
  Glen's MM Recipe Archive, http://www.erols.com/hosey.
 
</step></directions></recipe></recipeml>
