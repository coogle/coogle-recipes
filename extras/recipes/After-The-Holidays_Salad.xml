<recipeml version="0.5">
  <recipe>
    <head>
      <title>After-The-Holidays Salad</title>
      <categories>
        <cat>Kaz</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Diced cooked turkey</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Pineapple chunks -- well</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Drained</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Diced celery</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sliced greed onions</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Dry roasted peanuts</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Seedless green peppers</item></ing>
      <ing>
        <amt>
          <qty>2/3</qty>
          <unit>cups</unit></amt>
        <item>Mayonnaise</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Chopped chutney</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Lime juice</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Curry powder</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Lettuce leaves -- optional</item></ing></ingredients>
    <directions>
      <step>  In a mixing bowl, toss first six ingredients.  In a small bowl, combine all
  remaining ingredients except lettuce. Pour over turkey and mix gently.
  Chill. Serve on a bed of lettuce, if desired. Yields: 4 servings.
  
  The fruit, nuts and seasonings give the salad a unique flavor.
  
  Recipe By     :
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
