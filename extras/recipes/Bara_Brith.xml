<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Bara Brith</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Plain flour.</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>A pinch of salt</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Granulated sugar</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Currants</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Sultanas</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Large raisins; stoned</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Lard</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>A little chopped candied peel</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>ounces</unit></amt>
        <item>Baker's yeast</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg</item></ing></ingredients>
    <directions>
      <step>  Preheat the oven to 160 Centigrade (moderate oven). Mix all the dry
  ingredients and then mix in the egg. Put the mix into a greased baking tin
  and bake for about an hour, until golden brown on top.
  
  http://www.grossi.co.uk/wales/recipe.htm
  Posted to recipelu-digest by LSHW &lt;shusky@erols.com&gt; on Feb 17, 1998
 
</step></directions></recipe></recipeml>
