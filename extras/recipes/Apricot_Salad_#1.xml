<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apricot Salad #1</title>
      <categories>
        <cat>Salad</cat></categories>
      <yield>20</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>(6-oz) apricot gelatin</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Ripe bananas; sliced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>(15-oz) crushed pineapple; drained; reserve juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Boiling water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Cold water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Marshmallows</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg yolk; beaten</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Pineapple juice</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Butter</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>(3-oz) cream cheese; softened</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Cool whip</item></ing></ingredients>
    <directions>
      <step>  Dissolve gelatin in boiling water. Add cold water. Stir in marshmallows,
  pineapple and bananas. Pour into 2 quart dish and chill until firm. Mix
  sugar, flour and pineapple juice and bring to a boil. Slowly add egg yolk.
  Cook until clear and thick, stirring constantly. Add cream cheese and stir
  until smooth. Let cool. Fold in Cool Whip. Spread on gelatin. Refrigerate.
  
  MRS BILL HEIDELBERGER (CONNIE)
  
