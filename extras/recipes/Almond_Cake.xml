<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Cake</title>
      <categories>
        <cat>Cake</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing-div>
        <title>DOUGH</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>pounds</unit></amt>
          <item>Sour cream</item></ing>
        <ing>
          <amt>
            <qty>6</qty>
            <unit>tablespoons</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty>6</qty>
            <unit>tablespoons</unit></amt>
          <item>Oil</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>pounds</unit></amt>
          <item>Flour</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>pounds</unit></amt>
          <item>Butter</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>pounds</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>tablespoons</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit>packages</unit></amt>
          <item>Sliced almonds</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix all dough ingredients together; spread on cookie sheet.  Melt butter in
  saucepan; add sugar, vanilla &amp; milk. Stir in almonds &amp; mix all topping
  ingredients well. Spread over dough. Bake about 20 minutes in low oven.
  
  FRAU PETER (BRIGETTE) LEMM
  
