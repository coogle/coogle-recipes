        <ing>
          <amt>
            <qty>1</qty>
            <unit>medium</unit></amt>
          <item>Orange; grated rind &amp; juice</item></ing>
        <ing>
          <amt>
            <qty>3/4</qty>
            <unit>cups</unit></amt>
          <item>Almonds; blanched &amp; ground</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>.  with 3 Tbsp granulated</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>.  sugar</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Almond extract</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Flour, cake</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
