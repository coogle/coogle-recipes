<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baby Artichoke Calvados Saute</title>
      <categories>
        <cat>Gourmet</cat>
        <cat>Pork</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Baby artichokes</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Pork loin scallops</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>ounces</unit></amt>
        <item>Butter; clarified</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>pounds</unit></amt>
        <item>Apple slices</item></ing>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>ounces</unit></amt>
        <item>Green onions; sliced</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Garlic; minced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Sage; chopped</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>ounces</unit></amt>
        <item>Calvados (or other apple bra</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Chicken stock; as needed</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt; to taste</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Garnish: sage leaves</item></ing></ingredients>
    <directions>
      <step>  Recipe by: Donald Cope, Doubletree Hotel, Monterey Wash, trim and halve
  artichoke hearts. Store in acidulated water. For each serving, saute 4oz
  pork in butter. Remove from pan and hold warm. Saute 8-10 artichoke halves
  in pan, about 5 minutes. Add portions of apples, onions, sage, apple brandy
  and toss. Moisten with chicken stock and season with salt. Add serving of
  pork and toss again. Remove to serving plate and garnish with sage leaves.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
