  <recipe>
    <head>
      <title>Anne-Marie's Blueberry Glace' Pie</title>
      <categories>
        <cat>Blueberries</cat>
        <cat>Desserts</cat>
        <cat>Pies &amp; past</cat>
        <cat>Recipes fro</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>cups</unit></amt>
        <item>Blueberries</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Butter</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>tablespoons</unit></amt>
        <item>Cornstarch</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>dash</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>dash</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>9 inch baked pie shell</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Whipped cream -- for</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Garnish</item></ing></ingredients>
    <directions>
      <step>  Simmer 1 cup less-than-perfect berries with water for 4 minutes. Add mixed
  cornstarch and sugar, other ingredients except whole berries,  pie shell
  and
  whipped cream. Cook until thick and clear. Mix gently  with whole berries
  and
  pour into baked 9" pie shell. Chill and top with whipped cream.
  
