<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Apple Pizza</title>
      <categories>
        <cat>Desserts</cat>
        <cat>Snacks</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Loaf frozen bread dough</item></ing>
      <ing>
        <amt>
          <qty>5</qty>
          <unit/></amt>
        <item>Medium apples, pared, cored</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>And sliced thin</item></ing>
      <ing>
        <amt>
          <qty>2/3</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Butter</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Chopped nuts</item></ing></ingredients>
    <directions>
      <step>  Let frozen dough set at room temp. until thawed. Roll dough into a circle
  for a 12 inch pizza pan. Cover dough with the sliced apples. Combine
  remainder ingredients and sprinkle over the apples. Let rise. Bake for 10
  to 15 minutes at 375 degrees.
  
  From the Kitchen of: Gary &amp; Margie Hartford, Eugene, OR (1:152/19)
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
