<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basic Free Green Salad</title>
      <categories>
        <cat>Vegetables</cat>
        <cat>Vegetarian</cat></categories>
      <yield>2</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Romaine lettuce; shredded</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Iceberg lettuce; shredded</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Spinach; shredded</item></ing></ing-div>
      <ing-div>
        <title>OR</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Swiss chard; shredded</item></ing>
        <ing>
          <amt>
            <qty>12</qty>
            <unit/></amt>
          <item>Radishes; whole or sliced</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Endive; curly</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Cucumber; sliced</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Stalks celery; diced w tops</item></ing></ing-div>
      <ing-div>
        <title>OTHER INGREDIENTS</title>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Your own combinations</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Boston or bibb lettuce</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Red/green cabbage</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Kale or comfrey</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Chicory or sorrell</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Parsley or watercress</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Turnip, collard; beet greens</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Or mustard or dandelion</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Onions; tomatoes, sprouts</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Mushrooms; sliced fresh</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Red/green/gold peppers</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Sliced</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Flowerettes or broccoli</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Caulifower</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Zucchini or yellow squash</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Sliced</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Scallions or chives</item></ing></ing-div></ingredients>
