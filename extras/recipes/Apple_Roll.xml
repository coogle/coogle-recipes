      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Apples, roll lke jelly roll and slice</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Into a tin (good sized baking dish) put:</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Maple syrup</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Hot water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Butter</item></ing></ingredients>
