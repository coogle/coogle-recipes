<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>2-Cheese Cheese Ball</title>
      <categories>
        <cat>Appetizers</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>16</qty>
          <unit>ounces</unit></amt>
        <item>Cream cheese, softened</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Grated sharp cheddar cheese</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>Hidden Valley Original--</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Ranch Dressing (small size)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Walnuts or Pecans</item></ing></ingredients>
    <directions>
      <step>  Blend together cheeses and Hidden Valley dressing package contents with
  hands and shape into ball or log. Roll in walnuts or pecans. Refrigerate.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
