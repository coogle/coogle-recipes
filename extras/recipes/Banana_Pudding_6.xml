<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Pudding</title>
      <categories>
        <cat>Puddings</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>Vanilla wafers</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Bananas</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>package</unit></amt>
        <item>Instant vanilla pudding mix</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Cold milk</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Carton of sour cream (4 oz.)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Carton Cool Whip (4 oz.)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Pinch of salt</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Vanilla</item></ing></ingredients>
    <directions>
      <step>  Beat the pudding with cold milk.  Fold in the sour cream, Cool Whip, salt
  and vanilla.  Layer vanilla wafers and bananas. Pour pudding mixture over
  bananas and wafers. Refrigerate overnight. Randy Rigg
 
</step></directions></recipe></recipeml>
