<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Cream Cheese Stuffed French Toast</title>
      <categories>
        <cat>Breakfast</cat>
        <cat>Gourmet</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>pounds</unit></amt>
        <item>French bread (wide loaf); un</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Almonds, dry-roasted; diced</item></ing>
      <ing>
        <amt>
          <qty>8</qty>
          <unit>ounces</unit></amt>
        <item>Cream cheese; softened</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Raspberry preserves</item></ing>
      <ing>
        <amt>
          <qty>24</qty>
          <unit/></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>quarts</unit></amt>
        <item>Milk</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Almond extract</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Vanilla extract</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Butter, maple syrup, powdere</item></ing></ingredients>
    <directions>
      <step>  Recipe by: Blue Diamond Growers Cut bread into 1-inch slices and cut a
  pocket into each side. Combine almonds, cream cheese and preserves and
  stuff into bread pockets. Beat together eggs, milk and flavorings. Soak
  bread and saute in butter until browned on both sides. Serve 2-4 slices per
  person.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
