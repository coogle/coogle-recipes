<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Daiquiri</title>
      <categories>
        <cat>Beverages</cat>
        <cat>Mixed drink</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>ounces</unit></amt>
        <item>Light rum</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Triple sec</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>ounces</unit></amt>
        <item>Lime juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>ounce</unit></amt>
        <item>Banana liqueur</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit/></amt>
        <item>Banana</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>ounces</unit></amt>
        <item>Heavy cream</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Crushed ice</item></ing></ingredients>
    <directions>
      <step>  Combine all ingredients in a blender and blend at high speed until smooth.
  Pour into a sour, champagne, or cocktail glass.
  
  Recipe by: Joe Robertson Posted to EAT-L Digest by LDGOSS
