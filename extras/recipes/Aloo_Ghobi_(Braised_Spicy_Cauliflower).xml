  <recipe>
    <head>
      <title>Aloo Ghobi (Braised Spicy Cauliflower)</title>
      <categories>
        <cat>Vegetable</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Cumin seeds</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Cloves garlic; minced</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Fresh hot green chili; seeded &amp; thinly sliced (optional)</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>2-inch piece fresh ginger; peeled and cut into very thin slivers (optional)</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Chili powder</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground coriander</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground turmeric</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>medium</unit></amt>
          <item>Cauliflower; trimmed and cut into florets</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>large</unit></amt>
          <item>Potato; peeled and cut into 1 inch cubes</item></ing></ing-div>
      <ing-div>
        <title>GARNISH</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Garam masala</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Finely chopped fresh coriander</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Tomatoes; thinly sliced</item></ing></ing-div></ingredients>
