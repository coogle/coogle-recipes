<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Nut Cake #1</title>
      <categories>
        <cat>Cake</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Shortening</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Eggs; beaten</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Buttermilk</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Baking soda</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Mashed bananas</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Chopped nuts</item></ing></ing-div>
      <ing-div>
        <title>ICING</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Brown sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Stick butter or margarine</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty/>
            <unit/></amt>
          <item>Powdered sugar</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix together shortening, sugar &amp; eggs. Add buttermilk, soda, mashed
  bananas, flour &amp; nuts. Mix well &amp; bake slowly at 350 until done. Makes 3
  layers. When cool, top with icing. ICING: Boil brown sugar &amp; butter until
  it melts. Add milk. Cook 1 minute. Cool. Add enough powdered sugar to make
  desired spreading consistency.
  
  MRS. JOHNNY FLAGG
  
