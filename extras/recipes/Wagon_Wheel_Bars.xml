<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Wagon Wheel Bars</title>
      <categories>
        <cat>Bars</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>CRUST</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Butter</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Nuts; chopped</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Brown sugar</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>8</qty>
            <unit>ounces</unit></amt>
          <item>Cream cheese; softened</item></ing>
        <ing>
          <amt>
            <qty>8</qty>
            <unit>ounces</unit></amt>
          <item>Cool Whip</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Powdered sugar</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Heath candy bars; chopped</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mix crust ingredients and pat into 9 x 13-inch pan. Bake at 350 degrees for
  15 minutes; cool. Mix topping together except for Heath bars. Pour over
  cooled crust. Chop up Heath bars and sprinkle on top.
  
  Recipe by: diane@keyway.net
  
