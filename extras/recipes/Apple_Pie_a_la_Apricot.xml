            <qty>3</qty>
            <unit/></amt>
          <item>Egg yolks</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Margarine</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>pounds</unit></amt>
          <item>Tart cooking apples</item></ing>
        <ing>
