<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Aimee's Chili</title>
      <categories>
        <cat>Chili</cat>
        <cat>Beef</cat>
        <cat>Main dishes</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Ground beef</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Onion</item></ing>
      <ing>
        <amt>
          <qty>40</qty>
          <unit>ounces</unit></amt>
        <item>Tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Bell pepper; diced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Corn meal</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt and pepper</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Tabasco sauce</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Chilli powder</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Water</item></ing></ingredients>
    <directions>
      <step>  Recipe by: Wayne Preston Allen Brown meat; add onion and saute well. Add
  tomato sauce, seasonings, bell pepper, and chilli powder, salt, and pepper
  to taste. Add water until sauce is of desired thickness. Simmer 15-30
  minutes. During last 15 minutes of cooking, sprinkle in corn meal and stir.
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
