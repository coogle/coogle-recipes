<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Apple Doughnuts</title>
      <categories>
        <cat>Dessert</cat></categories>
      <yield>60</yield></head>
    <ingredients>
      <ing-div>
        <title/>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>cups</unit></amt>
          <item>Flour</item></ing>
        <ing>
          <amt>
            <qty>3 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Nutmeg</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Shortening</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Eggs; beaten</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Milk</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Apples; grated</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Chopped nuts</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Butter; melted</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cinnamon</item></ing></ing-div></ingredients>
    <directions>
      <step>  Date: Tue, 19 Mar 1996 18:30:18 -0500
  
  From: "Vernon E. Phipps Jr." &lt;cook4u@vivanet.com&gt;
  
  Mix flour, baking powder, sugar, salt, and nutmeg. Cut in shortening until
  mixture looks like crumbs. Add eggs, milk, apples, nuts and mix thoroughly.
  Fill well greased tiny muffin pans 2/3 full. Bake in preheated 350-degree
  oven for 20-25 minutes. In a plastic bag mix sugar and cinnamon. Dip
  doughnut tops in butter and shake in bake to coat.
  
