<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basic Palacsinta</title>
      <categories>
        <cat>Desserts</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>5</qty>
          <unit>tablespoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit>large</unit></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Milk</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Melted butter</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Vanilla</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Plain club soda (just</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Opened)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Butter</item></ing></ingredients>
    <directions>
      <step>  Sift flour &amp; salt in bowl. Mix in sugar. Combine eggs, &amp;  milk &amp; beat
  well. Add to flour a little at a time, beating well after each
  addition with wooden spoon.  Gradually add melted butter &amp; beat til
  smooth. Beat in vanilla. Cover &amp; refrigerate overnight. Just before
  cooking, gradually stir in soda til batter is as light as cream. Melt
  1 tsp. butter in a crepe pan. Heat pan til butter stops foaming. Pour
  3 Tbls. batter &amp; tilt pan. Cook til lightly browned &amp; turn &amp; cook
  other side. Stack. Fill &amp; bake as directed.
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmkah001.zip
 
</step></directions></recipe></recipeml>
