<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Vinaigrette Marinade</title>
      <categories>
        <cat>Marinades</cat>
        <cat>Bar-b-q</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>BEEF, POULTRY, PORK, FISH, VEG'S</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit/></amt>
          <item>Small garlic clove; crushed</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Coarse salt</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Dijon mustard</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Lemon juice</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Olive oil</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Red wine vinegar</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Freshly ground pepper</item></ing></ing-div></ingredients>
    <directions>
      <step>  Mash the garlic and salt together in a small bowl, with the back of a
  spoon. Stir in the mustard and lemon juice. Whisk in the olive oil,
  vinegar, and pepper. Makes about 1/3 cup.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
