<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Mocha Ice Cream</title>
      <categories>
        <cat>Chocolate</cat>
        <cat>Desserts</cat>
        <cat>Fruits</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing-div>
        <title>PATTI VDRJ67A</title>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>medium</unit></amt>
          <item>Bananas, extra ripe; peeled</item></ing>
        <ing>
          <amt>
            <qty>4</qty>
            <unit/></amt>
          <item>Eggs; clean, uncracked</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cups</unit></amt>
          <item>Whipping cream</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Half &amp; half</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Chocolate syrup</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Instant coffee crystals</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Ground cinnamon</item></ing>
        <ing>
          <amt>
            <qty>1/8</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing></ing-div></ingredients>
    <directions>
      <step>  Slice bananas into blender; process until pureed (1-1/2 cups). Add eggs;
  process to blend. Pour banana mixture and remaining ingredients into ice
  cream freezer container. Stir until sugar dissolves and mixture is blended.
  Freeze according to manufacturer's directions. Makes 1-1/2 quarts.
  Posted to MM-Recipes Digest  by lena36@juno.com (Lena P Mitchell) on Apr 5,
  1998
 
</step></directions></recipe></recipeml>
