<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Authentic New Mexican Salsa</title>
      <categories>
        <cat>Relishes</cat>
        <cat>Salsa</cat>
        <cat>Sauces/dips</cat></categories>
      <yield>4 -6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>gallon</unit></amt>
        <item>Whole peeled tomatoes</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Onion; chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Garlic; granulated</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>pounds</unit></amt>
        <item>Fresh jalapenos</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Chile pequin</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>ounce</unit></amt>
        <item>Fresh cilantro</item></ing></ingredients>
    <directions>
      <step>  Combine all ingredients. Let marinate for several hours. Enjoy.
  
  Contributor:  Chile Pepper Magazine, MM format by Roy Olsen Posted to
  MM-Recipes Digest V4 #222 by roy@indy.net (Roy) on Aug 22, 1997
 
</step></directions></recipe></recipeml>
