<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Beef Chili with Navy Beans</title>
      <categories>
        <cat>Soups/stews</cat>
        <cat>Meats</cat>
        <cat>Microwave</cat>
        <cat>Chili</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Navy beans</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Lean beef stew trimmed of fat and cut into 1/4 to 1/2 inch pieces</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Onions cut into 1/2 inch pieces</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Chopped garlic</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Tomato paste</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Tomato (1/2 lb) cut into 1/2 inch pieces</item></ing></ingredients>
    <directions>
      <step>       Remove any stones from the beans and wash them
  thoroughly in
     a sieve. Place the beans in a pot with beef,
  onions, garlic,
     chili powder, salt, tomato paste, tomato and add 6
  c  of
     water. Bring to a boil, reduce the heat to very low
  and simmer
     2 to 2 1/2 hours.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
