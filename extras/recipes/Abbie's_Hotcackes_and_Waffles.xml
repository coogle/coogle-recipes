<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Abbie's Hotcackes and Waffles</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Eggs</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Oil</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Buttermilk</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Baking powder</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Baking soda</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>dash</unit></amt>
        <item>Salt</item></ing></ingredients>
    <directions>
      <step>  here is my grandmother's pancake and waffle recipe. It has been tried, and
  tried, and tried, and is true.
  
  Slightly beat eggs. Stir in oil and buttermilk. Sift dry ingredients
  together and stir in. Bake in greased waffle iron or on hot griddle.
  
  Posted to TNT - Prodigy's Recipe Exchange Newsletter  by The Davis Family
  &lt;leelee@harborside.com&gt; on Sep 9, 1997
 
</step></directions></recipe></recipeml>
