<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Avocado Chef Salad</title>
      <categories>
        <cat>Salads</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Chopped red leaf lettuce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Chopped watercress</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Thinly sliced mushrooms</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Pitted black olives</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Croutons</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Avocado; flesh cubed</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Hard-cooked eggs; sliced</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>ounces</unit></amt>
        <item>Swiss cheese; julienned</item></ing>
      <ing>
        <amt>
          <qty>12</qty>
          <unit>ounces</unit></amt>
        <item>Cooked meat(s) *</item></ing></ingredients>
    <directions>
      <step>  *Note: ham, turkey and/or roast beef, julienned Combine lettuce,
  watercress, mushrooms, olives and croutons in large bowl. Toss lightly to
  mix. Arrange avocado and eggs on top of salad. Top with Swiss cheese and
  meat. Make vinaigrette.  Just before serving, shake dressing, pour over
  salad and toss.
 
</step></directions></recipe></recipeml>
