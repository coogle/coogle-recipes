<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce #02</title>
      <categories>
        <cat>Sauce</cat></categories>
      <yield>16</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>8</qty>
          <unit>cans</unit></amt>
        <item>(small) tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>cans</unit></amt>
        <item>(small) tomato paste</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>quarts</unit></amt>
        <item>Vinegar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pint</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>5</qty>
          <unit>ounces</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Cumin</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Red pepper or cayenne</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Liquid smoke</item></ing></ingredients>
    <directions>
      <step>  Mix all ingredients in a 2-gallon cooker. Simmer on very low heat for 30-45
  minutes.
  
