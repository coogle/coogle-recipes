<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce (Microwave)</title>
      <categories>
        <cat>Sauces</cat>
        <cat>Microwave</cat>
        <cat>Syd's book</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>tablespoons</unit></amt>
        <item>Unsalted Butter</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Onion, Chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Clove Garlic, Minced</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Diced Celery</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Catsup</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Diced Red Pepper</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Fresh Lime Juice</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Cider Vinegar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Worcestershire Sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Slice Lime Cut In Half</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Ground Cumin</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Chili Powder</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit>dashes</unit></amt>
        <item>Tabasco Sauce</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt To Taste</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Chopped Fresh Coriander</item></ing></ingredients>
    <directions>
      <step>  Microwave butter, onion and garlic in a medium microwave safe bowl, covered
  with plastic wrap, on high power for 2 minutes.  Stir in celery and
  microwave covered for 2 minutes.  Stir in remaining ingredients except
  coriander until blended.  Microwave covered for 7 minutes, stirring halfway
  through cooking.  Puree sauce in a blender bowl or food processor. Transfer
  to bowl and stir in all but 1 tb coriander.  Garnish with remaining
  coriander.  Serve warm or at room temperature.  Makes 2-1/2 cups. 81
  calories per 1/4 cup.  From: Syd's Cookbook.
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/sydsbook.zip
 
</step></directions></recipe></recipeml>
