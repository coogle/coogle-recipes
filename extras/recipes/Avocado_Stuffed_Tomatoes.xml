<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Avocado Stuffed Tomatoes</title>
      <categories>
        <cat>Salads</cat>
        <cat>Appetizers</cat>
        <cat>Snacks</cat></categories>
      <yield>4</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Fresh tomatoes</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Ripe avocado</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>drops</unit></amt>
        <item>Lemon juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pinch</unit></amt>
        <item>Chili powder</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>small</unit></amt>
        <item>Handful of alfalfa sprouts</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Chopped celery or green bell pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Chopped parsley</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pinch</unit></amt>
        <item>Coriander</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt</item></ing></ingredients>
    <directions>
      <step>  Cut tops off tomatoes &amp; scoop out insides.  Save insides for another dish.
  Mash avocado &amp; mix with the rest of the ingredients. Stuff into the tomato
  shells.  Particularly good as an appetizer to a Mexican meal.
 
</step></directions></recipe></recipeml>
