  <recipe>
    <head>
      <title>Banana Pudding Cake</title>
      <categories>
        <cat>None</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing-div>
        <title>CAKE LAYERS</title>
        <ing>
          <amt>
            <qty>2 1/2</qty>
            <unit>cups</unit></amt>
          <item>Soft wheat all-purpose flour; sifted</item></ing>
        <ing>
          <amt>
            <qty>1 2/3</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1 1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Baking soda</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit></amt>
          <item>Baking powder</item></ing>
        <ing>
          <amt>
            <qty>1 1/4</qty>
            <unit>teaspoons</unit></amt>
          <item>Salt</item></ing>
        <ing>
          <amt>
            <qty>2/3</qty>
            <unit>cups</unit></amt>
          <item>Buttermilk</item></ing>
        <ing>
          <amt>
            <qty>2/3</qty>
            <unit>cups</unit></amt>
          <item>Butter; softened</item></ing>
        <ing>
          <amt>
            <qty>1 1/4</qty>
            <unit>cups</unit></amt>
          <item>Mashed ripe bananas</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Eggs</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
