  <recipe>
    <head>
      <title>Banana Bread Pudding/bananas Foster Sauce</title>
      <categories>
        <cat>Desserts</cat>
        <cat>Fruits</cat>
        <cat>Breads</cat>
        <cat>Wrv</cat></categories>
      <yield>1</yield></head>
