<recipeml version="0.5">
  <recipe>
    <head>
      <title>Barbecue Sauce</title>
      <categories>
        <cat>Sauces</cat>
        <cat>Microwave</cat>
        <cat>Relishes</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Ketchup</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Packed brown sugar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>White vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Celery seed</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Dash garlic powder</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Dash pepper</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Worcestershire sauce</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Prepared horseradish</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Onion, chopped</item></ing></ingredients>
    <directions>
      <step>  1. Combine all ingredients in a 2-quart glass casserole. Cover with waxed
  paper.
  
  2. Cook in microwave oven 3 minutes at High, or until hot; stir once.
  
  Yield: about 1-1/2 cups.
  
  SOURCE: Adventures in microwave cooking
 
</step></directions></recipe></recipeml>
