<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Bean Pot Lentils</title>
      <categories>
        <cat>None</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Lentils</item></ing>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>cups</unit></amt>
        <item>Water</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Chopped onion</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Dark brown sugar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Catsup</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Molasses</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Dry mustard</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit>slices</unit></amt>
        <item>Bacon; diced and cooked</item></ing></ingredients>
    <directions>
      <step>  In saucepan, combine lentils, water, onion, and salt. Bring to a boil;
  cover and simmer 45 minutes. Stir in remaining ingredients. Turn into
  1-quart casserole dish and bake at 350 for 1 hour and 15 minutes. Stir
  occasionally.
  
  Posted to recipelu-digest Volume 01 Number 185 by "Karen L. M. Hock"
  &lt;khock@eoir.com&gt; on Oct 31, 1997
 
</step></directions></recipe></recipeml>
