<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basil Vinaigrette</title>
      <categories>
        <cat>Spring</cat>
        <cat>Supper</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2/3</qty>
          <unit>cups</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>2/3</qty>
          <unit>cups</unit></amt>
        <item>White wine vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Finely chopped fresh basil</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Green onions; finely chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Pepper</item></ing></ingredients>
    <directions>
      <step>  Process all ingredients in a food processor or blender, stopping once to
  scrape down sides. Cover mixture, and chill. Stir well, and toss with mixed
  greens. Makes 1 1/3 cups.
  
