<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Avocado and Pine Nut Salad</title>
      <categories>
        <cat>None</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Head lettuce</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Diced avocado</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Pink grapefruit -- peeled</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>And sectioned</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Toasted pine nuts</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Cooked white-meat chicken</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Rice vinegar</item></ing>
      <ing>
        <amt>
          <qty>1/3</qty>
          <unit>cups</unit></amt>
        <item>Honey</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Low-sodium tamari or soy</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Sauce</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Grated gingerroot</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Dark sesame oil</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Herbal salt substitute</item></ing></ingredients>
    <directions>
      <step>  1. Wash and dry lettuce, then tear into bite-sized pieces. Place in a large
  salad bowl. Add avocado, grapefruit sections, pine nuts, and chicken.
  
  2. Toss together vinegar, honey, tamari sauce, gingerroot, oil, and salt
  substitute. Pour over salad and mix well. Serve immediately.
  
  Recipe By     : the California Culinary Academy
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
