<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>30-Minute Chili</title>
      <categories>
        <cat>Main dish</cat>
        <cat>Tex-mex</cat>
        <cat>Beef</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pound</unit></amt>
        <item>Ground chuck or lean ground</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Beef</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Onion, large -- chopped</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>Kidney beans (12 oz)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>Tomato soup -- undiluted</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Chili powder (or to taste)</item></ing></ingredients>
    <directions>
      <step>  Brown the meat in a little butter and cook until the meat is brown - about
  10 minutes. Add all other ingredients and let simmer for 30 minutes. Your
  choice of hot sauce may be added to taste.
  
