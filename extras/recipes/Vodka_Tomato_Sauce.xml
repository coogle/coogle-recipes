<recipeml version="0.5">
  <recipe>
    <head>
      <title>Vodka Tomato Sauce</title>
      <categories>
        <cat>Pasta</cat>
        <cat>Sauces</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Chopped onion</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Finely chopped celery</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Cloves garlic, minced</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Prosciutto, finely chopped</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Vodka</item></ing>
      <ing>
        <amt>
          <qty>28</qty>
          <unit>ounces</unit></amt>
        <item>Crushed tomatoes with juice</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Chopped parsley</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Basil</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Oregano</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Half and half</item></ing></ingredients>
    <directions>
      <step>  Saute onion, celery, and garlic in olive oil. Add prosciutto, vodka,
  tomatoes, parsley, basil, and oregano and simmer for about 30 minutes. Add
  half and half and warm, but do not boil. Serve over pasta.
  
  Recipe by: Carol Mann Posted to Kitmailbox Digest by wsmann@juno.com
  (William S Mann) on Mar 12, 1997
 
</step></directions></recipe></recipeml>
