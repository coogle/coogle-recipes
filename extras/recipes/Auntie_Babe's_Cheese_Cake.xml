<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Auntie Babe's Cheese Cake</title>
      <categories>
        <cat>Desserts</cat>
        <cat>Cakes</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing-div>
        <title>CRUST</title>
        <ing>
          <amt>
            <qty>1 2/3</qty>
            <unit>cups</unit></amt>
          <item>Graham cracker crumbs</item></ing>
        <ing>
          <amt>
            <qty>1 1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cinnamon</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>tablespoons</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>6</qty>
            <unit>tablespoons</unit></amt>
          <item>Butter; melted</item></ing></ing-div>
      <ing-div>
        <title>FILLING</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit/></amt>
          <item>Eggs; beaten well</item></ing>
        <ing>
          <amt>
            <qty>24</qty>
            <unit>ounces</unit></amt>
          <item>Cream cheese; softened</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>pint</unit></amt>
          <item>Sour cream</item></ing>
        <ing>
          <amt>
            <qty>3</qty>
            <unit>tablespoons</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>teaspoons</unit></amt>
          <item>Vanilla</item></ing></ing-div></ingredients>
    <directions>
      <step>  Combine crust ingredients and pat into bottom and sides of pan. Beat cream
  cheese thoroughly; add sugar gradually; add eggs in thirds; add vanilla;
  pour into prepared pan. Bake at 375 for 25 minutes; remove from oven and
  add topping. To prepare topping, whip sour cream; add sugar and vanilla,
  and pour over cake. continue baking at 500 for 5 minutes. Important - chill
  at LEAST 24 hours.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
