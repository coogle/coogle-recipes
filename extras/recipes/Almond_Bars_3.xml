<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Almond Bars</title>
      <categories>
        <cat>Cookies</cat>
        <cat>1941</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Shortening</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Honey</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Eggs, well, beaten</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Powdered sugar</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Finely chopped blanched almonds</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cups</unit></amt>
        <item>Flour</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>teaspoons</unit></amt>
        <item>Baking powder</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Vanilla</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Grated rind 1 lemon</item></ing></ingredients>
    <directions>
      <step>  Cream shortening and sugar.  Add honey, eggs, and lemon rind. Mix
  thoroughly.  Sift flour, measure, and sift three times with baking powder
  and salt.  Add chopped nuts and flavoring. Mix thoroughly. Pour into
  shallow, well-oiled pan.  Bake in moderate oven (375 F) 12-15 minutes.
  Remove from oven.  Cool.  Turn onto board well dusted with powdered sugar.
  Cut in oblong bars. Roll in powdered sugar. 16 servings. Mrs. William
  Stevens, Columbus, IN.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
