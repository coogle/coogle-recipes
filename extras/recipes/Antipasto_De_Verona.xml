<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Antipasto De Verona</title>
      <categories>
        <cat>Appetizers</cat>
        <cat>Italian</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>medium</unit></amt>
        <item>Radicchio heads</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>pounds</unit></amt>
        <item>Prosciutto or Bresaola in thin strips</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>medium</unit></amt>
        <item>Celery root; in thin sticks</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>pounds</unit></amt>
        <item>Parmesan cheese; in wedges</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Pepper</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Extra virgin olive oil</item></ing></ingredients>
    <directions>
      <step>  Line individual salad bowls with radicchio leaves. Add equal portions of
  prosciutto and celery roots. Top with wedges of Parmesan. Season to taste
  with salt, freshly ground black pepper and olive oil.
 
</step></directions></recipe></recipeml>
