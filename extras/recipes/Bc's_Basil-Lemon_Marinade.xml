  <recipe>
    <head>
      <title>Bc's Basil-Lemon Marinade</title>
      <categories>
        <cat>Marinades</cat></categories>
      <yield>1</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>can</unit></amt>
        <item>(12oz) Frozen Lemonade</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Concentrate, thawed</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Slivered fresh basil leaves</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Or 2 1/2 T dried basil lvs</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Olive or vegetable oil</item></ing></ingredients>
    <directions>
      <step>  Mix all ingredients. Makes about 1 1/4 cups
  
  *Betty Crocker's Great Grilling
