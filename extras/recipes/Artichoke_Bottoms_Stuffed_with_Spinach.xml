          <unit>can</unit></amt>
        <item>(14-oz) artichoke bottoms or-</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>cans</unit></amt>
        <item>(8.5-oz) artichoke hearts; drained</item></ing></ingredients>
