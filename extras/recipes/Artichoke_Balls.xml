<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Artichoke Balls</title>
      <categories>
        <cat>Appetizers</cat>
        <cat>Vegetables</cat></categories>
      <yield>8</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Garlic clove -- minced</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Olive oil</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>8 oz can</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg -- beaten</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Parmesan cheese</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Italian bread crumbs</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Artichoke hearts -- mashed</item></ing></ingredients>
    <directions>
      <step>  Saute garlic in oil. Add egg and artichokes. Cook over low heat for 5
  minutes. Remove from heat. Add Parmesan cheese and 1/4 cup bread crumbs.
  With a teaspoon, form into balls. Roll in remaining bread crumbs. Chill 2
  hours or until ready to serve.
  
  Recipe By     : Elizabeth Powell
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
