<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baked Cranberry-Apple Dumplings (1 of 2)</title>
      <categories>
        <cat>Desserts</cat>
        <cat>Dumplings</cat>
        <cat>Holidays</cat></categories>
      <yield>12</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Pastry for 2-crust pie</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>teaspoons</unit></amt>
        <item>Cinnamon</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Medium baking apples (about 2 lb)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Rome Beauty or Greening</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Butter melted</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Egg yolk</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>CRANBERRY-APPLE SAUCE:</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>cup</unit></amt>
        <item>Cranberries, washed and stems removed</item></ing>
      <ing>
        <amt>
          <qty>3/4</qty>
          <unit>cups</unit></amt>
        <item>Sugar</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Aple or maple-flavored syrup (optional)</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>cups</unit></amt>
        <item>Chopped, pared apple</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>tablespoons</unit></amt>
        <item>Butter or margarine</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Vanilla ice cream or whipped</item></ing></ingredients>
    <directions>
