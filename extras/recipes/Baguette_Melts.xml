<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Baguette Melts</title>
      <categories>
        <cat>Snacks</cat></categories>
      <yield>48</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>pounds</unit></amt>
        <item>Cheddar cheese -- shredded</item></ing>
      <ing>
        <amt>
          <qty>4 1/2</qty>
          <unit>ounces</unit></amt>
        <item>Ripe olives -- chopped</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>ounces</unit></amt>
        <item>Pimientos -- diced</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Green onions -- finely</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Chopped</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Mayonnaise</item></ing>
      <ing>
        <amt>
          <qty>1 1/2</qty>
          <unit>tablespoons</unit></amt>
        <item>Prepared horseradish</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>large</unit></amt>
        <item>Baguette -- sliced</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Diagonally</item></ing></ingredients>
    <directions>
      <step>  1. Mix together cheese, olives, pimientos, green onions, mayonnaise, and
  horseradish.
  
  2. Spoon about 1 tablespoon cheese mixture onto each baguette slice.
  
  3. Broil until cheese starts to melt.
  
  Makes 3 to 4 dozen.
  
  * Timesaver Tip: Cheese topping can be made up to 2 days ahead,
  refrigerated, and used as needed.
  
  Recipe By     : the California Culinary Academy
  
  File ftp://ftp.idiscover.co.uk/pub/food/mealmaster/recipes/mmdja006.zip
 
</step></directions></recipe></recipeml>
