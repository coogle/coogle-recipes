<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Ajilimojili</title>
      <categories>
        <cat>Caribbean</cat>
        <cat>Condiments</cat>
        <cat>Hot/spicy</cat></categories>
      <yield>3</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Red Peppers, Seeded and Quartered</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Green Pepper, Seeded and Quartered</item></ing>
      <ing>
        <amt>
          <qty>3</qty>
          <unit/></amt>
        <item>Scotch Bonnet Peppers, Seeded</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Head Garlic Separated Into Cloves</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Sprigs Fresh Coriander, Chopped</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Juice of One Lime</item></ing>
      <ing>
        <amt>
          <qty>1/4</qty>
          <unit>cups</unit></amt>
        <item>Malt Vinegar</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Salt</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Freshly Ground Black Pepper</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Olive Oil</item></ing></ingredients>
    <directions>
      <step>  Puree the red pepper, green pepper, Scotch Bonnet peppers, garlic,
  coriander and lime juice in a food processor. Add the vinegar, salt, black
  pepper and olive oil and process again. Bottle the sauce in hot sterilized
  jars.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
