<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Banana Nut Cheesecake</title>
      <categories>
        <cat>Cakes</cat>
        <cat>Cheese</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing-div>
        <title>BASE</title>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>cup</unit></amt>
          <item>Chocolate wafer crumbs</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Margarine, melted</item></ing></ing-div>
      <ing-div>
        <title>BODY</title>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>packages</unit></amt>
          <item>8-ounce cream cheese, soften</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Sugar</item></ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cups</unit></amt>
          <item>Mashed ripe banana</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit/></amt>
          <item>Eggs</item></ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>cups</unit></amt>
          <item>Chopped walnuts</item></ing></ing-div>
      <ing-div>
        <title>TOPPING</title>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cups</unit></amt>
          <item>Milk chocolate pieces</item></ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>tablespoon</unit></amt>
          <item>Margarine</item></ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit></amt>
          <item>Cold water</item></ing></ing-div></ingredients>
    <directions>
      <step>   BASE: Combine crumbs and margarine; press onto bottom of 9-inch springform
  pan.  Bake at 350, 10 minutes.
   BODY: Combine cream cheese, sugar and banana, mixing at medium speed on
  electric mixer until well blended. Add eggs, one at a time, mixing well
  after each addition. Stir in walnuts; pour over crust.
   Bake at 350, 40 minutes.  Loosen cake from rim of pan; cool before
  removing rim of pan.
   TOPPING: Melt chocolate pieces and margarine with water over low heat,
  stirring until smooth.  Drizzle over cheesecake. Chill.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
