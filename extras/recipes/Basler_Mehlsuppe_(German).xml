<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basler Mehlsuppe (German)</title>
      <categories>
        <cat>Suppen</cat>
        <cat>Nationalger</cat></categories>
      <yield>10</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>80</qty>
          <unit>grams</unit></amt>
        <item>Pflanzenfett</item></ing>
      <ing>
        <amt>
          <qty>630</qty>
          <unit>grams</unit></amt>
        <item>Zwiebeln</item></ing>
      <ing>
        <amt>
          <qty>200</qty>
          <unit>grams</unit></amt>
        <item>Halbweissmehl</item></ing>
      <ing>
        <amt>
          <qty>2 1/2</qty>
          <unit>liters</unit></amt>
        <item>Bouillon</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit>deciliters</unit></amt>
        <item>Kochwein rot</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Salz und pfeffer zum abschmecken</item></ing>
      <ing>
        <amt>
          <qty>95</qty>
          <unit>grams</unit></amt>
        <item>Sbrinz (oder anderer</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Hartkase)</item></ing></ingredients>
    <directions>
      <step>  Recipe by: Danny Stocker, MR-Freudenberg , Berne Switzerland Preparation
  Time: 0:50 Vorbereitung - Zwiebeln schalen, fein schneiden oder hacken -
  Mehl in einer Lyonerpfanne, im Ofen, langsam braun rosten - Auskuhlen
  lassen Zubereitung - Zwiebeln in Pflanzenfett langsam braun rosten - Mit
  dem gerosteten Mehl stauben und vermischen - Etwas erkalten lassen - Mit
  der heissen Bouillon auffullen, gut verruhren - Aufkochen, Rotwein zufugen,
  abschaumen und mind. 1 Stunde sieden
    lassen - die Suppe purieren - Abschmecken - Geriebener Sbrinz separat
  dazu servieren
 
</step></directions></recipe></recipeml>
