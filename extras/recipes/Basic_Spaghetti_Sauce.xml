<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Basic Spaghetti Sauce</title>
      <categories>
        <cat>Pasta</cat>
        <cat>Sauces</cat></categories>
      <yield>3</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>tablespoon</unit></amt>
        <item>Olive Oil</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Onions chopped</item></ing>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Crushed garlic cloves or</item></ing>
      <ing>
        <amt>
          <qty>2</qty>
          <unit/></amt>
        <item>Minced garlic</item></ing>
      <ing>
        <amt>
          <qty>14</qty>
          <unit>ounces</unit></amt>
        <item>Can Tomato sauce</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Red wine (optional)</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Sweet green pepper</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>teaspoon</unit></amt>
        <item>Dried leaf basil</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>teaspoons</unit></amt>
        <item>Leaf oregano</item></ing></ingredients>
    <directions>
      <step>  Heat oil in a large saucpan set over medium heat. Add onions and garlic.
  Saute for 2 min. Add remaining ingredients. Cover and bring to a boil,
  stirring often. Then, reduce heat and simmer, stirring often for at least 5
  min.
  
