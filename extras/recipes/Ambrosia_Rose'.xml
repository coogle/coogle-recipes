<?xml version="1.0" encoding="UTF-8"?>

<recipeml version="0.5">
  <recipe>
    <head>
      <title>Ambrosia Rose'</title>
      <categories>
        <cat>Kosher</cat>
        <cat>Appetizers</cat>
        <cat>Cajun</cat>
        <cat>Desserts</cat>
        <cat>Fruits</cat></categories>
      <yield>6</yield></head>
    <ingredients>
      <ing>
        <amt>
          <qty>4</qty>
          <unit/></amt>
        <item>Grapefruit</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit/></amt>
        <item>Pineapple</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>Sugar (or more to taste)</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Nutmeg</item></ing>
      <ing>
        <amt>
          <qty>6</qty>
          <unit/></amt>
        <item>Oranges</item></ing>
      <ing>
        <amt>
          <qty>1</qty>
          <unit>pint</unit></amt>
        <item>Strawberries</item></ing>
      <ing>
        <amt>
          <qty/>
          <unit/></amt>
        <item>Shredded coconut</item></ing>
      <ing>
        <amt>
          <qty>1/2</qty>
          <unit>cups</unit></amt>
        <item>White or rose' wine</item></ing></ingredients>
    <directions>
      <step>  Dice pinepple; cut grapefruit and oranges in sections. Wash berries and
  remove stems; add to fruits.  Add sugar and let steep for several hours in
  refrigerator. Before serving, add wine. Sprinkle with shredded coconut and
  nutmeg.
  
  From Gemini's MASSIVE MealMaster collection at www.synapse.com/~gemini
 
</step></directions></recipe></recipeml>
